datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

enum Kitchen {
    ITALIAN
    MEXICAN
    SPANISH
    GREEK
    JAPANESE
    CHINESE
    INDIAN
    FRENCH
    DUTCH
    AMERICAN
    VEGAN
    VEGETARIAN
    OTHER
}

enum Amount {
    GRAM
    KILOGRAM
    LITER
    MILLILITER
    PIECE
    TEASPOON
    TABLESPOON
    CUP
    PINCH
    SOME
    OTHER
}

model Recipe {
  id                String    @id @default(uuid())
  name              String
  description       String
  youtubeUrl        String?
  kitchen           Kitchen   @default(ITALIAN)
  portions          Int
  cookingTime       Int
  ingredients       Ingredient[]
  preparationSteps  PreparationStep[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model Ingredient {
  id                String    @id @default(uuid())
  name              String
  amount            Int?
  unit              Amount   @default(GRAM)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  Recipe            Recipe   @relation(fields: [recipeId], references: [id])
  recipeId          String
}

model PreparationStep {
  id                String    @id @default(uuid())
  description       String
  isCompleted       Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  Recipe            Recipe   @relation(fields: [recipeId], references: [id])
  recipeId          String
}